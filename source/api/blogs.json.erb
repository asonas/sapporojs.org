<%
  article_data = blog.articles.map {|article|
    {
      title: article.title,
      body: article.body,
      text: strip_tags(article.body),
      summary: article.summary,
      summary_text: strip_tags(article.summary),
      tags: article.tags,
      date: article.date,
      path: article.path,
      url: article.url
    }
  }
%>
<%= article_data.to_json %>
